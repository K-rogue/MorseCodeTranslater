<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid color for the button -->
    <solid android:color="@android:color/holo_blue_dark" />  <!-- This will make the button blue -->

    <!-- Rounded corners to make the button appear circular -->
    <corners android:radius="100dp" />  <!-- This should be half of the button size to make it a circle -->

    <!-- Optional stroke (border) for the button -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />  <!-- White border for contrast, can be adjusted or removed -->
</shape>